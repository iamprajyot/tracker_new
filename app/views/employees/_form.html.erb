<%= form_for(@employee) do |f| %>
  <div class="form-group row">
    <label class="col-sm-1 col-form-label">Username</label>
    <div class="col-sm-10">
      <%= f.text_field :username %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-md-2">
      <%= f.submit class: 'btn btn-primary' %>
    </div>
    <%= link_to 'Back', employees_path, class: 'btn btn-info' %>
  </div>
<% end %>





