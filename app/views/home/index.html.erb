<form action="<%= home_mark_attendance_path %>" method="get" %>
  <div class="form-group row">
    <label class="col-sm-1 col-form-label">Username</label>
    <div class="col-sm-10">
      <%= text_field_tag :username %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-md-2">
      <%= submit_tag 'Mark attendance', class: 'btn btn-primary' %>
    </div>
  </div>
</form>
