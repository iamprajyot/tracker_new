<h2>Curent Month Attendance of <b><%= @attendance.first.employee.username if !@attendance.empty?%></b></h2>
<h5>(<%= current_month_date_range%>)</h5>
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Date</th>
      <th>Time</th>
      <th>Remarks</th>
    </tr>
  </thead>

  <tbody>
    <%if @attendance.empty?%>
      <tr><td colspan="2">No records found</td></tr>
    <%else%>
      <% @attendance.each do |record| %>
        <tr>
          <td><%= record.check_in_date %></td>
          <td><%= record.check_in_hour %> : <%= record.check_in_minute %></td>
          <td><%= record.is_late? ? 'Late' : 'On Time' %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'Back', home_dashboard_path, class: 'btn btn-info' %>